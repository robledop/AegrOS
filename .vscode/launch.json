{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch with GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/os.bin",
            "cwd": "${workspaceRoot}",
            "args": [],
            // "sourceFileMap": {
            //     "/home/robledo/source/os": "${workspaceRoot}"
            // },
            "targetArchitecture": "x86",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerArgs": "-d /home/robledo/source/os/src -d /home/robledo/source/os/src/kernel -d /home/robledo/source/os/src/memory/paging -d ~/source/os/src/disk -d ~/source/os/src/fs/fat -d ~/source/os/src/idt -d ~/source/os/src/include -d ~/source/os/user/stdlib/src -d ~/source/os/src/x86",
            "customLaunchSetupCommands": [
                {
                    "text": "target remote localhost:1234",
                    "description": "Connect to QEMU remote debugger"
                }
            ],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "add-symbol-file /home/robledo/source/os/build/kernelfull.o 0x100000",
                    "description": "Add kernelfull.o symbols"
                },
                // {
                //     "text": "add-symbol-file /home/robledo/source/os/rootfs/echo 0x400000",
                //     "description": "Add echo symbols"
                // },
                {
                    "text": "add-symbol-file /home/robledo/source/os/rootfs/sh 0x400000",
                    "description": "Add sh symbols"
                },
                // {
                //     "text": "add-symbol-file /home/robledo/source/os/rootfs/ls 0x400000",
                //     "description": "Add ls symbols"
                // },
                // {
                //     "text": "add-symbol-file /home/robledo/source/os/rootfs/cat 0x400000",
                //     "description": "Add cat symbols"
                // },
                {
                    "text": "break isr_handler",
                    "description": "Break on exception handler."
                }
            ],
            "preLaunchTask": "Launch QEMU"
        }
    ]
}