{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GDB and GRUB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/rootfs/boot/myos.kernel",
            "cwd": "${workspaceRoot}",
            "args": [],
            // "sourceFileMap": {
            //     "/home/robledo/source/os": "${workspaceRoot}"
            // },
            "targetArchitecture": "x86",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerArgs": "-d ~/source/os/src -d ~/source/os/src/kernel -d ~/source/os/src/memory/paging -d ~/source/os/src/disk -d ~/source/os/src/fs/fat -d ~/source/os/src/idt -d ~/source/os/src/include -d ~/source/os/user/stdlib/src -d ~/source/os/src/x86 -d ~/source/os/src/grub -d ~/source/os/src/task -d ~/source/os/src/boot",
            "customLaunchSetupCommands": [
                {
                    "text": "target remote localhost:1234",
                    "description": "Connect to QEMU remote debugger"
                }
            ],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                },
                {
                    "text": "add-symbol-file ~/source/os/rootfs/boot/myos.kernel 0x200000",
                    "description": "Add myos.kernel symbols"
                },
                // {
                //     "text": "add-symbol-file /home/robledo/source/os/rootfs/echo 0x400000",
                //     "description": "Add echo symbols"
                // },
                {
                    "text": "add-symbol-file /home/robledo/source/os/rootfs/sh 0x400000",
                    "description": "Add sh symbols"
                },
                // {
                //     "text": "add-symbol-file /home/robledo/source/os/rootfs/ls 0x400000",
                //     "description": "Add ls symbols"
                // },
                // {
                //     "text": "add-symbol-file /home/robledo/source/os/rootfs/cat 0x400000",
                //     "description": "Add cat symbols"
                // },
                {
                    "text": "break idt_exception_handler",
                    "description": "Break on exception handler."
                },
                // {
                //     "text": "break kernel_main",
                //     "description": "Break on kernel_main."
                // },
                {
                    "text": "break panic",
                    "description": "Break on panic."
                }
            ],
            "preLaunchTask": "Launch QEMU with GRUB"
        },
